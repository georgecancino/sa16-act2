<h1>Contact Me</h1>

<div>
    <h2>Email</h2>
    <p><%= @email %></p>
</div>

<div>
    <h2>Phone</h2>
    <p><%= @phone %></p>
</div>

<div>
    <h2>Social Media</h2>
    <ul>
        <% @social_media_links.each do |platform, link| %>
        <li><%= platform.capitalize %>: <a href="<%= link %>"><%= link %></a></li>
        <% end %>
    </ul>
</div>

<div>
    <h2>Explore</h2>
    <ul>
        <li><a href="<%= home_path %>">Home</a></li>
        <li><a href="<%= about_path %>">About Me</a></li>
        <li><a href="<%= work_path %>">My Work</a></li>
    </ul>
</div>
