<h1>My Work</h1>

<div class="project-list">
  <% @projects.each do |project| %>
    <div class="project">
      <h2><%= project[:title] %></h2>
      <p><%= project[:description] %></p>

      <img src="<%= image_path(project[:image_url]) %>" alt="<%= project[:title] %>" class="project-image">
    </div>
  <% end %>
</div>

<div>
  <h2>Explore</h2>
  <ul>
    <li><a href="<%= home_path %>">Home</a></li>
    <li><a href="<%= about_path %>">About Me</a></li>
    <li><a href="<%= contact_path %>">Contact Me</a></li>
  </ul>
</div>